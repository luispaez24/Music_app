<%= form_for(@song) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :artist %>
    <%= f.text_field :artist %>
  </div>

  <div class="field">
    <%= f.label :album %>
    <%= f.text_field :album %>
  </div>

  <div class="field">
    <%= f.label :release_year %>
    <%= f.number_field :release_year %>
  </div>

  <div class="field">
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div>

  <div class="actions">
    <%= f.submit "Create Song" %>
  </div>
<% end %>